<%- include('../_header.ejs') %>

<h2>home</h2>
<form action="/users" method="POST">
	<div class="container my-5">
		<div class="form-group">
			<label class="h2" for="title">name</label>
			<input
				class="form-control"
				type="text"
				id="name"
				name="name"
				required
				value="<%= user.name %>"
			/>
		</div>
		<div class="form-group">
			<label class="h4" for="email">email</label>
			<input
				class="form-control"
				name="email"
				id="email"
				required
				value="<%= user.email %>"
			/>
		</div>
		<div class="my-2 form-group">
			<label class="h4" for="password">password</label>
			<input class="form-control" name="password" id="password" required />
		</div>
		<a class="btn btn-danger" href="/">cancel</a>
		<button class="btn btn-success" type="submit">save</button>
	</div>
</form>
<%- include('../_footer.ejs') %>
